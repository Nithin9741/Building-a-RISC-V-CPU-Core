//code for calculator
$sum[31:0] = $var1[31:0] + $var2[31:0];
   $diff[31:0]  = $var1[31:0] + $var2[31:0];
   $prod[31:0] = $var1 * $var2;
   $quot[31:0] = $var1 / $var2;
   
   $out[31:0] = $op == 2'b00 ? $sum:
                $op == 2'b01 ? $diff:
                $op == 2'b10 ? $prod;
                 $quot; //default
